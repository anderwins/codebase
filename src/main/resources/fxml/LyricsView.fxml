<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.VBox?>

<ScrollPane fx:id="lyricsScrollPane"
            xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="ulb.view.LyricsViewController"
            fitToWidth="true" fitToHeight="false"
            style="-fx-background-color: transparent; -fx-border-color: white;"
            prefWidth="400" prefHeight="300">

    <VBox fx:id="lyricsContainer"
          visible="false"
          spacing="10"
          style="-fx-background-color: rgba(0, 0, 0, 0.8); -fx-padding: 15px;">
        
        <!-- Titre localisÃ© -->
        <Label fx:id="titleLabel"
               text="%lyrics.title"
               style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: white;" />

        <!-- Paroles dynamiques -->
        <Label fx:id="lyricsLabel"
               wrapText="true"
               style="-fx-font-size: 14px; -fx-text-fill: white;" />
        
    </VBox>
</ScrollPane>
